# Production Environment Variables for SmartVest
# Note: Only variables prefixed with VITE_ are exposed to the client-side code

# API Base URL for production (replace with your actual production API URL)
VITE_API_BASE_URL=http://vivekamih.gotdns.com:5501

# Application Environment
VITE_APP_ENV=production

# Enable/disable debug mode
VITE_DEBUG_MODE=false

# Application Title
VITE_APP_TITLE=SmartVest

# API Timeout (in milliseconds)
VITE_API_TIMEOUT=10000

# Enable analytics in production
VITE_ENABLE_ANALYTICS=true

# Application Version (update this with each deployment)
VITE_APP_VERSION=1.0.0

# Base URL if deployed in a subdirectory (leave empty if deployed at root)
# VITE_BASE_URL=/smartvest/